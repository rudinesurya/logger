{
    "compilerOptions": {
        "module": "ESNext", // Ensure using the latest module system (ESM)
        "target": "ESNext", // This allows for modern JavaScript features in the output
        "moduleResolution": "node", // Resolves modules as Node.js does
        "esModuleInterop": true, // Allows default imports for CommonJS modules
        "sourceMap": true, // Generates source maps for easier debugging
        "outDir": "dist", // Output directory for compiled files
        "skipLibCheck": true, // Skip library type checking for faster compilation
        "strict": true // Enables strict type-checking options (optional but recommended)
    },
    "lib": [
        "es2015" // Use ES2015 libraries (or higher, like "es2020")
    ],
    "include": [
        "src/**/*.ts" // Ensure you include your TypeScript files
    ],
    "exclude": [
        "node_modules" // Exclude node_modules from compilation
    ]
}